---
import siteConfig from "../../site-config.json";

let { title, description = siteConfig.defaultDescription } = Astro.props;

title = title ? `${title} :: ${siteConfig.baseTitle}` : siteConfig.baseTitle;
---

<meta charset="UTF-8" />
<meta name="description" property="og:description" content={description} />
<meta name="viewport" content="width=device-width" />
<title>{title}</title>

<link rel="icon" type="image/x-icon" href={`${Astro.site}/favicon.ico`} />

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap"
  rel="stylesheet"
/>

<base href={Astro.site} />

<style global>
  @import "../styles/styles.css";
</style>
