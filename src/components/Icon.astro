---
const {
  name,
  width = "1.5rem",
  height = "1.5rem",
  customAttribs = {},
  className,
} = Astro.props;

const defaultAttribs = {
  viewBox: "0 0 24 24",
  "stroke-width": 2,
  "stroke-linecap": "round",
  "stroke-linejoin": "round",
};

const icons = {
  "chevrons-left": {
    svg: `
      <polyline points="11 7 6 12 11 17" />
      <polyline points="17 7 12 12 17 17" />
    `,
  },
  "caret-left": {
    svg: `<path d="M18 15l-6 -6l-6 6h12" transform="rotate(270 12 12)" />`,
  },
  "caret-right": {
    svg: `<path d="M18 15l-6 -6l-6 6h12" transform="rotate(90 12 12)" />`,
  },
  minus: {
    svg: `<line x1="5" y1="12" x2="19" y2="12" />`,
  },
  plus: {
    svg: `
      <line x1="12" y1="5" x2="12" y2="19" />
      <line x1="5" y1="12" x2="19" y2="12" />
    `,
  },
  cross: {
    svg: `
      <line x1="18" y1="6" x2="6" y2="18" />
      <line x1="6" y1="6" x2="18" y2="18" />
    `,
  },
  reset: {
    svg: `<path d="m 10.953,20.006141 a 8,8 0 1 1 4,-0.5 m 5,0.5 h -5 v -5" />`,
  },
  scales: {
    svg: `
      <line x1="7" y1="20" x2="17" y2="20" />
      <path d="M6 6l6 -1l6 1" />
      <line x1="12" y1="3" x2="12" y2="20" />
      <path d="M9 12l-3 -6l-3 6a3 3 0 0 0 6 0" />
      <path d="M21 12l-3 -6l-3 6a3 3 0 0 0 6 0" />
    `,
  },
  map: {
    svg: `
      <polyline points="3 7 9 4 15 7 21 4 21 17 15 20 9 17 3 20 3 7" />
      <line x1="9" y1="4" x2="9" y2="17" />
      <line x1="15" y1="7" x2="15" y2="20" />
    `,
  },
  home: {
    svg: `
      <polyline points="5 12 3 12 12 3 21 12 19 12" />
      <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7" />
      <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6" />
    `,
  },
  marker: {
    svg: `
      <path class="shadow" d="M16 32s1.427-9.585 3.761-12.025c4.595-4.805 8.685-.99 8.685-.99s4.044 3.964-.526 8.743C25.514 30.245 16 32 16 32z"></path>
      <path class="pin" d="M15.938 32S6 17.938 6 11.938C6 .125 15.938 0 15.938 0S26 .125 26 11.875C26 18.062 15.938 32 15.938 32zM16 6a4 4 0 100 8 4 4 0 000-8z"></path>
    `,
    attribs: {
      viewBox: "0 0 32 32",
      "stroke-width": 1,
    },
  },
  books: {
    svg: `
      <rect x="5" y="4" width="4" height="16" rx="1" />
      <rect x="9" y="4" width="4" height="16" rx="1" />
      <path d="M5 8h4" />
      <path d="M9 16h4" />
      <path d="M13.803 4.56l2.184 -.53c.562 -.135 1.133 .19 1.282 .732l3.695 13.418a1.02 1.02 0 0 1 -.634 1.219l-.133 .041l-2.184 .53c-.562 .135 -1.133 -.19 -1.282 -.732l-3.695 -13.418a1.02 1.02 0 0 1 .634 -1.219l.133 -.041z" />
      <path d="M14 9l4 -1" />
      <path d="M16 16l3.923 -.98" />
    `,
  },
  book: {
    svg: `
      <path d="M3 19a9 9 0 0 1 9 0a9 9 0 0 1 9 0" />
      <path d="M3 6a9 9 0 0 1 9 0a9 9 0 0 1 9 0" />
      <line x1="3" y1="6" x2="3" y2="19" />
      <line x1="12" y1="6" x2="12" y2="19" />
      <line x1="21" y1="6" x2="21" y2="19" />
    `,
  },
};
const { attribs = {}, svg } = icons[name];
---

<svg
  {...customAttribs}
  {...attribs}
  {...defaultAttribs}
  class={className ? className : ""}
  set:html={svg}></svg>

<style define:vars={{ height, width }}>
  svg {
    display: inline-block;
    fill: transparent;
    height: var(--height);
    stroke: currentColor;
    vertical-align: middle;
    width: var(--width);
  }
</style>
